<% if type == "private_profile" %>
	<%= content_tag :div, class: "col-3 mt-3 text-center post", id: "#{album.id}" do %>
	    <div class="card mt-3 border-0">
	    	<% (1..3).each do |i| %>
	    		<%= image_tag album.images[0].thumb.url, class: "img-thumbnail img image-stacked", size: "150x150" %>
	    	<% end %>
	      	<% if album.sharing_mode == "private_mode" %>
		      	<div class="card-img-overlay d-flex justify-content-center align-items-center" id="private-icon">
		        	<i class="fas fa-lock"></i>
		      	</div>
	      	<% end %>
	      	<div class="card-img-overlay album-description">
              <h5><%= album.images.size %><br><small>PHOTOS</small></h5>
            </div>  
	      	<div class="card-img-overlay bottom-right-pos">
	            <%= link_to 'Edit', edit_album_path(album.id), class: "btn edit-album-btn rounded-pill" %>
	        </div>
	      	<%= content_tag :p, truncate(album.title, length: 20, separator: ' ') %>
	    </div>
	<% end %>
<% elsif type == "public_profile" %>
	<%= content_tag :div, class: "col-3 mt-3 text-center post", id: "#{album.id}" do %>
	    <div class="card mt-3 border-0">
	      	<% (1..3).each do |i| %>
	    		<%= image_tag album.images[0].thumb.url, class: "img-thumbnail img image-stacked", size: "150x150" %>
	    	<% end %>
	    	<div class="card-img-overlay album-description">
              <h5><%= album.images.size %><br><small>PHOTOS</small></h5>
            </div>  
	      	<%= content_tag :p, truncate(album.title, length: 20, separator: ' ') %>
	    </div>
	<% end %>
<% end %>